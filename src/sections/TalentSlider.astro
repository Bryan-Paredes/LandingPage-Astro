<style>
  .glide__slide {
    transition: background-color 0.5s ease-in-out;
  }
  .glide__slide--active {
    @apply bg-[#171717];
  }
</style>

<script>
  import Glide from "@glidejs/glide";

  const $slider = document.getElementById("talent-slider");

  const glide = new Glide("#talent-slider", {
    type: "carousel",
    focusAt: "center",
    gap: 0,
    startAt: 6,
    perView: 13,
  }).mount();

  $slider?.addEventListener("click", (e) => {
    const clickedElement = e.target as HTMLElement;
    const isButton = clickedElement.tagName === "BUTTON";
    const buttonElement = isButton
      ? clickedElement
      : clickedElement.closest("button");

    if (buttonElement) {
      glide.go(`=${buttonElement.dataset.slide}`);
    }
  });
</script>
